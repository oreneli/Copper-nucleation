pair_coeff 8 8 lj/cut 0.0988  3.3152123099438304      # c
pair_coeff 9 9 lj/cut 0.2295  3.6940224448971026      # p4
pair_coeff 5 5 eam ../Cu_u3.eam
pair_coeff 1 5 lj/cut 0.9586 2.981
pair_coeff 2 5 lj/cut 0.6568 3.06
pair_coeff 3 5 lj/cut 0.664 2.973
pair_coeff 4 5 lj/cut 0.8929 2.951
pair_coeff 5 6 lj/cut 0.5854 2.735
pair_coeff 5 7 lj/cut 0.688 2.959
pair_coeff 5 8 lj/cut 0.6829 2.803
pair_coeff 5 9 lj/cut 30 2.06
# Settings

neighbor        2 bin
neigh_modify    delay 1 every 1

velocity       all create 300 220441 rot yes mom yes dist gaussian
fix            ensemble all npt temp 300 300 100 iso 1 1 1000.0

timestep       1

# Run the simulation
run            2000000
unfix          ensemble
fix            ensemble all npt temp 300 540 10 iso 1 1 100.0
run            3000000
unfix          ensemble
fix            ensemble all npt temp 540 540 10 iso 1 1 100.0
run            1000000
write_data     afterMix.data

dump                    mydmp all xyz 1000000 dump.xyz
dump_modify             mydmp element C C C C Cu O C C P
unfix          ensemble
fix            ensemble all npt temp 540 540 100 iso 1 1 1000.0


# Output
# thermo_style custom step temp etotal press vol density
